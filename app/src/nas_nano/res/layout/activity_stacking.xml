<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="io.nebulas.wallet.android.module.stacking.StackingActivity">

        <android.support.design.widget.AppBarLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                app:elevation="0dp"
                app:layout_behavior="io.nebulas.wallet.android.view.research.FixAppBarLayoutBehavior"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fitsSystemWindows="true"
                        android:background="#fff14d12"
                        app:layout_scrollFlags="scroll|enterAlways">

                        <android.support.v7.widget.ActionMenuView
                                android:id="@+id/actionMenuView"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                style="@style/ActionMenuBtnStyle"
                                android:visibility="gone"/>

                        <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/toolbar_height"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:layout_gravity="center|top"
                                android:gravity="center"/>


                </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f3f2f7">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@drawable/bg_gradient_stacking"/>

                <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/recyclerView"/>
        </RelativeLayout>
</LinearLayout>
