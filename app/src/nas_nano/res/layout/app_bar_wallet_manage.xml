<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="io.nebulas.wallet.android.view.research.FixAppBarLayoutBehavior"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

        <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="198dp">

                        <android.support.v7.widget.Toolbar
                                android:id="@+id/toolbar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/toolbar_bg"
                                android:fitsSystemWindows="true"
                                app:contentInsetStart="0dp"
                                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                                <TextView
                                        android:id="@+id/titleTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/toolbar_height"
                                        android:textSize="@dimen/toolebar_title_size"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:layout_gravity="center|top"
                                        android:gravity="center"/>


                        </android.support.v7.widget.Toolbar>

                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fitsSystemWindows="true"
                                app:layout_collapseParallaxMultiplier="0.5">

                                <TextView
                                        android:id="@+id/desTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxWidth="190dp"
                                        android:textSize="24sp"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        android:layout_marginTop="94dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginStart="15dp"/>

                                <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="@+id/desTV"
                                        app:layout_constraintBottom_toBottomOf="@+id/desTV"
                                        app:layout_constraintLeft_toRightOf="@+id/desTV"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"/>

                                <TextView
                                        android:id="@+id/subDesTV"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:textColor="@color/white"
                                        app:layout_constraintTop_toBottomOf="@+id/desTV"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginRight="25dp"
                                        android:layout_marginEnd="25dp"/>

                                <TextView
                                        android:id="@+id/thirdDesTv"
                                        android:layout_width="189dp"
                                        android:layout_height="wrap_content"
                                        android:textSize="15sp"
                                        android:textColor="@color/white"
                                        android:singleLine="true"
                                        android:ellipsize="middle"
                                        app:layout_constraintTop_toBottomOf="@+id/subDesTV"
                                        app:layout_constraintLeft_toLeftOf="@+id/subDesTV"/>

                        </android.support.constraint.ConstraintLayout>

                </RelativeLayout>
        </android.support.design.widget.CoordinatorLayout>

</android.support.design.widget.AppBarLayout>

