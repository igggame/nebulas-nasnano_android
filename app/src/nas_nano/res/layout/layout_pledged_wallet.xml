<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:layout_height="78dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/ivWalletIcon"
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/ivWalletIcon"
                        android:layout_alignBottom="@id/ivWalletIcon"
                        android:layout_toEndOf="@id/ivWalletIcon"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvWalletName"
                                android:textSize="17sp"
                                android:maxWidth="120dp"
                                android:ellipsize="end"
                                android:textColor="@color/black"
                                android:text="Wallet 1"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvWalletAddress"
                                android:textSize="12sp"
                                android:singleLine="true"
                                android:maxWidth="120dp"
                                android:ellipsize="middle"
                                android:textColor="@color/color_999999"
                                android:text="n1sFs...wYu"/>
                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="+3,680 NAX"
                        android:textColor="#ff4d00"
                        android:textSize="17sp"
                        android:id="@+id/tvLastProfit"
                        android:layout_marginEnd="13dp"
                        android:layout_alignTop="@id/ivWalletIcon"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvProfitDate"
                        android:text="昨日"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:layout_alignEnd="@id/tvLastProfit"
                        android:layout_below="@id/tvLastProfit"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>