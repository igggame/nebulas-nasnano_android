<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="75dp">

        <ImageView
                android:id="@+id/ivWalletIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_nax"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tvProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:text="+3,680 NAX"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivWalletIcon" />

        <TextView
                android:id="@+id/tvProfitDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="8月20日 18:30"
                app:layout_constraintEnd_toEndOf="@+id/tvProfit"
                app:layout_constraintTop_toBottomOf="@+id/tvProfit" />

        <View
                android:id="@+id/viewDividerLine"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"
                app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>