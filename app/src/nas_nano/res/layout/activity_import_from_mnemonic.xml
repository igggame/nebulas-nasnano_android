<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="io.nebulas.wallet.android.module.wallet.create.ImportFromMnemonicActivity">

        <include
                android:id="@+id/toolbar_layout"
                layout="@layout/app_bar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar_layout">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <TextView
                                android:id="@+id/descTextViewTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="24dp"
                                android:text="@string/mnemonic_import_title"
                                android:textColor="#ff202020"
                                android:textSize="20sp"/>

                        <TextView
                                android:id="@+id/mnemonic_input_des_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="18dp"
                                android:text="@string/mnemonic_import_sub_title"
                                android:textColor="@color/color_8F8F8F"
                                android:textSize="15sp"/>

                        <LinearLayout
                                android:id="@+id/mnemonicWordsContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="24dp"
                                android:layout_marginRight="18dp"
                                android:orientation="vertical">

                                <LinearLayout
                                        android:id="@+id/input1_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp">

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET1"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:nextFocusForward="@+id/mnemonicET2"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="01"
                                                android:tag="01"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET2"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="18dp"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET1"
                                                android:nextFocusForward="@+id/mnemonicET3"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="02"
                                                android:tag="02"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET3"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="18dp"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET2"
                                                android:nextFocusForward="@+id/mnemonicET4"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="03"
                                                android:tag="03"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/input2_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:layout_marginTop="24dp"
                                        app:layout_constraintLeft_toLeftOf="@+id/input1_layout"
                                        app:layout_constraintRight_toRightOf="@+id/input1_layout"
                                        app:layout_constraintTop_toBottomOf="@+id/input1_layout">

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET4"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET3"
                                                android:nextFocusForward="@+id/mnemonicET5"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="04"
                                                android:tag="04"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET5"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="18dp"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET4"
                                                android:nextFocusForward="@+id/mnemonicET6"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="05"
                                                android:tag="05"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET6"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="18dp"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET5"
                                                android:nextFocusForward="@+id/mnemonicET7"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="06"
                                                android:tag="06"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/input3_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:layout_marginTop="24dp"
                                        app:layout_constraintLeft_toLeftOf="@+id/input2_layout"
                                        app:layout_constraintRight_toRightOf="@+id/input2_layout"
                                        app:layout_constraintTop_toBottomOf="@+id/input2_layout">

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET7"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET6"
                                                android:nextFocusForward="@+id/mnemonicET8"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="07"
                                                android:tag="07"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET8"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="18dp"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET7"
                                                android:nextFocusForward="@+id/mnemonicET9"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="08"
                                                android:tag="08"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET9"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="18dp"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET8"
                                                android:nextFocusForward="@+id/mnemonicET10"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="09"
                                                android:tag="09"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/input4_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:layout_marginTop="24dp"
                                        app:layout_constraintLeft_toLeftOf="@+id/input3_layout"
                                        app:layout_constraintRight_toRightOf="@+id/input3_layout"
                                        app:layout_constraintTop_toBottomOf="@+id/input3_layout">

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET10"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET9"
                                                android:nextFocusForward="@+id/mnemonicET11"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="10"
                                                android:tag="10"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET11"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="18dp"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET10"
                                                android:nextFocusForward="@+id/mnemonicET12"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="11"
                                                android:tag="11"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                        <AutoCompleteTextView
                                                android:id="@+id/mnemonicET12"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="18dp"
                                                android:layout_weight="1"
                                                android:nextFocusLeft="@+id/mnemonicET11"
                                                android:background="@drawable/shape_round_corner_6dp_eef1f4"
                                                android:completionThreshold="1"
                                                android:gravity="center"
                                                android:imeOptions="actionDone"
                                                android:inputType="text"
                                                android:maxLines="1"
                                                style="@style/AutoCompleteStyle"
                                                android:hint="12"
                                                android:tag="12"
                                                android:textColorHint="@color/color_C5C5C5"
                                                android:textColor="@color/color_323232"
                                                android:textSize="14sp"/>

                                </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/layoutProtocol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical"
                                android:layout_marginTop="70dp">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.AppCompatCheckBox
                                                android:id="@+id/agreeCB"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/agree_text"
                                                android:textColor="@color/color_A8A8A8"
                                                android:textSize="14sp"
                                                android:theme="@style/CheckboxStyle"/>

                                        <TextView
                                                android:id="@+id/privacyTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/protocol"
                                                android:textColor="@color/color_038AFB"
                                                android:textSize="14sp"/>
                                </LinearLayout>

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                                android:id="@+id/text_and"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:text="@string/and"
                                                android:textColor="@color/color_8F8F8F"
                                                android:textSize="14sp"/>

                                        <TextView
                                                android:id="@+id/serviceProtocolTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:text="@string/service_protocol"
                                                android:textColor="@color/color_038AFB"
                                                android:textSize="14sp"/>
                                </LinearLayout>

                        </LinearLayout>

                        <TextView
                                android:id="@+id/importBtn"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="18dp"
                                android:enabled="false"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/common_big_margin"
                                android:background="@drawable/selector_for_btn_import_wallet"
                                android:text="@string/start_import"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                </LinearLayout>
        </ScrollView>


        <include
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/loading_view_with_bg"
                android:visibility="gone"
                android:layout_centerInParent="true"/>
</RelativeLayout>
