<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:fitsSystemWindows="true">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layoutInputArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:background="@drawable/shape_top_corner_eef1f4">

                        <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="18dp"
                                android:text="@string/input_passphrase"
                                android:textColor="@color/color_666666"
                                android:textSize="17sp"
                                tools:text="Payment Password" />

                        <ImageButton
                                android:id="@+id/ibClose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="8dp"
                                android:background="@color/transparent"
                                android:padding="10dp"
                                android:src="@mipmap/close_share" />

                </RelativeLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="18dp"
                                android:paddingTop="33dp"
                                android:paddingEnd="18dp">

                                <LinearLayout
                                        android:id="@+id/layoutSimplePassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal">

                                        <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="60dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/selector_simple_pwd_bg"
                                                android:gravity="center"
                                                android:textColor="@color/color_038AFB"
                                                android:textSize="28sp"
                                                tools:text="8" />
                                        <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="60dp"
                                                android:layout_marginStart="8dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/selector_simple_pwd_bg"
                                                android:gravity="center"
                                                android:textColor="@color/color_038AFB"
                                                android:textSize="28sp"
                                                tools:text="8" />
                                        <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="60dp"
                                                android:layout_marginStart="8dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/selector_simple_pwd_bg"
                                                android:gravity="center"
                                                android:textColor="@color/color_038AFB"
                                                android:textSize="28sp"
                                                tools:text="8" />
                                        <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="60dp"
                                                android:layout_marginStart="8dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/selector_simple_pwd_bg"
                                                android:gravity="center"
                                                android:textColor="@color/color_038AFB"
                                                android:textSize="28sp"
                                                tools:text="8" />
                                        <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="60dp"
                                                android:layout_marginStart="8dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/selector_simple_pwd_bg"
                                                android:gravity="center"
                                                android:textColor="@color/color_038AFB"
                                                android:textSize="28sp"
                                                tools:text="8" />
                                        <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="60dp"
                                                android:layout_marginStart="8dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/selector_simple_pwd_bg"
                                                android:gravity="center"
                                                android:textColor="@color/color_038AFB"
                                                android:textSize="28sp"
                                                tools:text="8" />
                                </LinearLayout>

                                <RelativeLayout
                                        android:id="@+id/layoutComplexPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp">

                                        <android.support.design.widget.TextInputEditText
                                                android:id="@+id/complexPwdET"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/shape_round_corner_ffffff_d4d9de"
                                                android:gravity="center_vertical"
                                                android:hint="@string/input_passphrase"
                                                android:imeOptions="actionDone"
                                                android:inputType="textPassword"
                                                android:lines="1"
                                                android:paddingStart="18dp"
                                                android:paddingEnd="56dp"
                                                android:textColor="@color/color_038AFB"
                                                android:textColorHint="@color/color_8F8F8F"
                                                android:textSize="15sp" />

                                        <ImageButton
                                                android:id="@+id/ibShowOrHidePassword"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:background="@color/transparent"
                                                android:paddingStart="18dp"
                                                android:paddingEnd="18dp"
                                                android:src="@mipmap/ic_pwd_to_show" />
                                </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="18dp"
                                android:layout_marginEnd="18dp">

                                <RelativeLayout
                                        android:id="@+id/layoutLoading"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="36dp"
                                        android:layout_marginBottom="36dp"
                                        android:visibility="invisible">

                                        <include layout="@layout/loading_view" />
                                </RelativeLayout>

                                <TextView
                                        android:id="@+id/tvConfirm"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/selector_for_btn_import_wallet"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:text="@string/confirm_btn"
                                        android:textColor="@color/white"
                                        android:textSize="17sp"
                                        android:visibility="invisible"
                                        tools:text="Next" />

                        </RelativeLayout>


                </LinearLayout>

        </LinearLayout>
</RelativeLayout>