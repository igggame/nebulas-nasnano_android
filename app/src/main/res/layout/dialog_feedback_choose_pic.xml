<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white">
        <TextView
                android:id="@+id/takePhoto"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:textColor="@color/color_202020"
                android:textSize="@dimen/size_17_sp"
                android:text="@string/take_photo"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/color_DFE2E5"
                app:layout_constraintBottom_toBottomOf="@+id/takePhoto"
                app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:id="@+id/selectPic"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:textColor="@color/color_202020"
                android:textSize="@dimen/size_17_sp"
                android:text="@string/select_pic"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/takePhoto"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/color_DFE2E5"
                app:layout_constraintTop_toBottomOf="@+id/selectPic"
                app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:id="@+id/cancleBtn"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:textColor="@color/color_FF5552"
                android:textSize="@dimen/size_17_sp"
                android:text="@string/cancel_btn"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
</android.support.constraint.ConstraintLayout>