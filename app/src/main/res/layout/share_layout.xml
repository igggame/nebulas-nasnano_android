<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:alpha="0.61"
        />
    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="218dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/share_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_202020"
            android:textSize="@dimen/size_17_sp"
            android:text="@string/share_title" />

        <View
            android:layout_marginTop="24dp"
            android:layout_toLeftOf="@id/title_tv"
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"
            android:background="@color/color_ffdfe2e5" />

        <View
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@id/title_tv"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"
            android:background="@color/color_ffdfe2e5" />

        <ImageView
            android:id="@+id/shareCloseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/close_share" />
        <GridView
            android:layout_marginTop="54dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:scrollbars="none"
            android:numColumns="4"
            android:verticalSpacing="13dp"
            android:id="@+id/platformGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </GridView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>