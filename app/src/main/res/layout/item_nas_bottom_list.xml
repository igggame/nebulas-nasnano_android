<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:layout_height="60dp">

        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="17sp"
                android:ellipsize="end"
                android:id="@+id/tvContent"
                android:layout_centerVertical="true"
                android:textColor="@color/color_202020"
                tools:text="Jack's wallet" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/ivCheckedStatus"
                android:src="@drawable/selectedicon" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/backupDes"
                android:visibility="gone"
                android:textColor="@color/color_FF5552"
                android:textSize="@dimen/size_17_sp"
                android:text="@string/backup_not_des" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_line" />
</RelativeLayout>